<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_acciones"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.adolfo.miagenda.Acciones"
    tools:showIn="@layout/activity_acciones">

    <TextView
        android:text="Â¿Que deseas hacer?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imagenProv"
        android:layout_alignEnd="@+id/imagenProv" />

    <Button
        android:text="Mandar un email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bEmail"
        android:layout_below="@+id/bLlamar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="mandarEmail" />

    <Button
        android:text="Ir a web/blog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bWeb"
        android:layout_below="@+id/bEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="irWeb" />

    <Button
        android:text="Llamar por telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bLlamar"
        android:onClick="Llamada"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
